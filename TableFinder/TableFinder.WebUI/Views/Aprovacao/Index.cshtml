@using TableFinder.Models
@model List<Estabelecimento>
<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome Estabelecimento</th>
                        <th>Descrição</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Estabelecimento item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Descricao</td>
                            <td>
                                <a href="@Url.Action("Aprovar","Aprovacao", new { @id_estabelecimento = item.Id })">Aprovar</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
