@using TableFinder.Models
@model List<Cardapio>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome do item</th>
                    <th>Tipo</th>
                    <th>Preço</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Produto</td>
                        <td>@item.Tipo.TipoNome</td>
                        <td>@item.Preco</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>